@using IdeaTrading.ViewModels

@{
    ViewData["Title"] = "Users";
}

@model List<UserViewModel>



<a href="/User/Create" class="btn btn-secondary" role="button" style="margin:30px 0px 30px 0px; float:right;">Add new user</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>City</th>
            <th>DateOfEmployment</th>
            <th>Position</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (UserViewModel u in Model)
        {
            <tr>
                <td>@u.ID</td>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
                <td>@u.Address</td>
                <td>@u.City</td>
                <td>@u.DateOfEmployment.ToString("dd.MM.yyyy")</td>
                <td>@u.Position</td>
                <td>@u.Phone</td>
                <td>
                    <a href="/User/Edit?id=@u.ID">Edit</a>
                    <a href="/User/Delete?id=@u.ID">Delete</a>
                    @*@Html.ActionLink("Delete", "Delete", new { id = u.ID })*@
                </td>
            </tr>
        }


    </tbody>


</table>
@**@

<script>
    function MessageDelete(UserID) {
        swal("Are you sure?", {
            dangerMode: true,
            buttons: true,
        }, function (isConfirm) {
            window.location = "/User/Create?UserID=" + UserID;
        });
    }
</script>




